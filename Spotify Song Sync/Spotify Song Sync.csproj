<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <OutputType>WinExe</OutputType>
    <TargetFramework>net7.0-windows</TargetFramework>
    <RootNamespace>Spotify_Song_Sync</RootNamespace>
    <Nullable>enable</Nullable>
    <UseWPF>true</UseWPF>
    <ApplicationIcon>synclogo.ico</ApplicationIcon>
  </PropertyGroup>

  <ItemGroup>
    <None Remove="synclogo.png" />
  </ItemGroup>

  <ItemGroup>
    <Content Include="synclogo.ico" />
  </ItemGroup>

  <ItemGroup>
    <PackageReference Include="Newtonsoft.Json" Version="13.0.3" />
    <PackageReference Include="RestSharp" Version="110.2.0" />
    <PackageReference Include="SpotifyAPI.Web" Version="7.1.1" />
    <PackageReference Include="SpotifyAPI.Web.Auth" Version="7.1.1" />
    <PackageReference Include="SuperSimpleTcp" Version="3.0.14" />
    <PackageReference Include="WPF-UI" Version="3.0.2" />
  </ItemGroup>

  <ItemGroup>
    <Resource Include="synclogo.png" />
  </ItemGroup>

</Project>
